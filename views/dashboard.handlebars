<section>
  <h2>Create New Blog</h2>

  <form class="blog-form">
    <div>
      <label for="blog-title">Title</label>
      <input type="text" id="blog-title" name="blog-title" />
    </div>

    <div>
      <label for="blog-body">Body</label>
      <textarea id="blog-body" name="blog-body"></textarea>
    </div>

    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if blogs.length}}
<section>
  <h2>Your Blogs</h2>
  <ol>
    {{#each blogs as |blog|}}
    <li>
      {{> blog-info blog}}
      <a href="/dashboard/edit/{{blog.id}}">Edit blog</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-blog.js"></script>